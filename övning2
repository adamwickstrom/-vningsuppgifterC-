using System;

namespace E4
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Vad 채r priset p책 din vara? (kr) ");
            int pris = int.Parse(Console.ReadLine());

            if (pris > 500) 
            {
                Console.WriteLine("Rabatten 채r: ");
                Console.WriteLine(pris * 0.10);
                Console.WriteLine("kr");
            }



            else
            {
                Console.WriteLine("Rabatten 채r: ");
                Console.WriteLine(pris * 0.02);
                Console.WriteLine("kr");

            }
            


        }
    }
}
